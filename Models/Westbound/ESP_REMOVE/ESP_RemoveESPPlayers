local Players = game:GetService("Players")

-- Função para limpar o ESP de um jogador específico
local function removePlayerESP(player)
    local character = player.Character
    if character then
        if character:FindFirstChild("ESPHighlight") then
            character.ESPHighlight:Destroy()
        end
        if character:FindFirstChild("ESPDistanceGui") then
            character.ESPDistanceGui:Destroy()
        end
    end
end

-- Remove de todos os jogadores atuais
for _, player in pairs(Players:GetPlayers()) do
    removePlayerESP(player)
end

-- Opcional: Desconectar eventos se você salvou as conexões em variáveis
-- Caso contrário, apenas parar de criar novos já resolve ao reexecutar.
print("[ESP JOGADORES] REMOVIDO")