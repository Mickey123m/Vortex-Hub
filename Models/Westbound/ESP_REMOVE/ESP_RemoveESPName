local Players = game:GetService("Players")

-- 1. Desativa a permissão de criação
_G.NameESP_Enabled = false

-- 2. Mata as conexões de PlayerAdded e CharacterAdded
if _G.NameESP_Connections then
    for _, conn in pairs(_G.NameESP_Connections) do
        if conn then conn:Disconnect() end
    end
    _G.NameESP_Connections = {}
end

-- 3. Remove todos os objetos OnlyNameESP do jogo
for _, player in pairs(Players:GetPlayers()) do
    local character = player.Character
    if character then
        local nameESP = character:FindFirstChild("OnlyNameESP")
        if nameESP then
            nameESP:Destroy()
        end
    end
end

print("[ESP NOME] TOTALMENTE REMOVIDO E DESATIVADO")