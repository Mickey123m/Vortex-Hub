local Workspace = game:GetService("Workspace")
local targetName = "Pliers"

local function removeESP(item)
    -- Procura a pasta interna de ESP criada (Item_ESP_Internal)
    local espFolder = item:FindFirstChild("Item_ESP_Internal")
    if espFolder then
        espFolder:Destroy()
    end
end

-- Varredura em todo o Workspace para encontrar os itens "Pliers" e remover o ESP
for _, obj in ipairs(Workspace:GetDescendants()) do
    if obj.Name == targetName then
        removeESP(obj)
    end
end

print("ESP de " .. targetName .. " removido com sucesso.")