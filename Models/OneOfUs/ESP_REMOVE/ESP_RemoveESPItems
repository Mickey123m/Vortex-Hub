-- Script para Desativar ESP + Name
_G.ItemsFullESP_Enabled = false

local workspace = game:GetService("Workspace")
local map = workspace:FindFirstChild("map")

local function clearAllESP(folderName, highlightName)
    if map then
        local folder = map:FindFirstChild(folderName)
        if folder then
            for _, item in ipairs(folder:GetChildren()) do
                -- Remove o Highlight
                local h = item:FindFirstChild(highlightName)
                if h then h:Destroy() end
                
                -- Remove o Nome
                local tag = item:FindFirstChild("ItemNameTag")
                if tag then tag:Destroy() end
            end
        end
    end
end

clearAllESP("Medkits", "ESP_Highlight_Medkit")
clearAllESP("Crowbars", "ESP_Highlight_Crowbar")

print("ESP Full Desativado: Itens limpos")