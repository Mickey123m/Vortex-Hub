local GunStats = require(game:GetService("ReplicatedStorage").GunScripts.GunStats)

for gunName, stats in pairs(GunStats) do
    if type(stats) == "table" then
        -- Aumenta a velocidade da animação (quanto maior, mais rápido)
        stats["ReloadAnimationSpeed"] = 100 
        -- Diminui o tempo de espera da recarga (quanto menor, mais rápido)
        stats["ReloadSpeed"] = 0
    end
end

print("Recarga rápida ativada para todas as armas.")