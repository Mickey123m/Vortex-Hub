local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- Configurações
local velocidadeMaxima = 35 -- Mude para quanto quiser

local function hackMovimentacao()
    local character = player.Character
    if not character then return end
    
    local humanoid = character:FindFirstChildOfClass("Humanoid")
    local values = character:FindFirstChild("Values")

    -- 1. Forçar a Velocidade no Humanoid (O motor físico do boneco)
    if humanoid then
        -- Se o jogo tentar te deixar lento (WalkSpeed baixo), nós forçamos o aumento
        if humanoid.WalkSpeed < velocidadeMaxima then
            humanoid.WalkSpeed = velocidadeMaxima
        end
    end

    -- 2. Forçar todos os Valores na pasta Values (Onde o jogo checa a Stamina)
    if values then
        for _, obj in ipairs(values:GetChildren()) do
            -- Procura por Stamina, Energy, Sprint, ou qualquer valor numérico que não seja o Speed
            if obj:IsA("NumberValue") or obj:IsA("IntValue") then
                if obj.Name:lower():find("stamina") or obj.Name:lower():find("energy") or obj.Name:lower():find("folego") then
                    obj.Value = 100
                end
                
                -- Força o Speed para 35 também, para o FOV acompanhar
                if obj.Name == "Speed" then
                    obj.Value = velocidadeMaxima
                end
            end
            
            -- Se existir um valor Booleano (True/False) de cansaço, a gente desliga
            if obj:IsA("BoolValue") and (obj.Name:lower():find("tired") or obj.Name:lower():find("cansado")) then
                obj.Value = false
            end
        end
    end
end

-- Roda 60 vezes por segundo para ganhar de qualquer script do jogo
RunService.Heartbeat:Connect(hackMovimentacao)

print("Script de Movimentação Real Ativado.")