local Workspace = game:GetService("Workspace")
local targetName = "Photo Camera"

local function applyESP(item)
    -- Evita duplicatas
    if item:FindFirstChild("Item_ESP_Internal") then return end
    
    -- Pequeno atraso para garantir que o objeto carregou
    task.wait(0.1)

    local container = Instance.new("Folder")
    container.Name = "Item_ESP_Internal"
    container.Parent = item

    -- 1. OUTLINE (Verde Neon)
    local highlight = Instance.new("Highlight")
    highlight.Name = "Outline"
    highlight.Adornee = item
    highlight.FillTransparency = 1
    highlight.OutlineColor = Color3.fromRGB(57, 255, 20) -- Verde Neon
    highlight.OutlineTransparency = 0
    highlight.DepthMode = Enum.HighlightDepthMode.AlwaysOnTop
    highlight.Parent = container

    -- 2. NOME DO ITEM (BillboardGui)
    local targetPart = item:IsA("BasePart") and item or item:FindFirstChildWhichIsA("BasePart", true)
    
    if targetPart then
        local billboard = Instance.new("BillboardGui")
        billboard.Name = "NomeTag"
        billboard.Adornee = targetPart
        billboard.Size = UDim2.new(0, 150, 0, 50)
        billboard.StudsOffset = Vector3.new(0, 1.8, 0)
        billboard.AlwaysOnTop = true
        billboard.Parent = container

        local label = Instance.new("TextLabel")
        label.BackgroundTransparency = 1
        label.Size = UDim2.new(1, 0, 1, 0)
        label.Text = "Camera"
        label.TextColor3 = Color3.fromRGB(57, 255, 20) -- Verde Neon
        label.TextStrokeTransparency = 0
        label.TextSize = 14
        label.Font = Enum.Font.SourceSansBold
        label.Parent = billboard
    end
end

-- LÃ³gica para itens que aparecem depois
Workspace.DescendantAdded:Connect(function(obj)
    if obj.Name == targetName then 
        applyESP(obj) 
    end
end)

-- Varredura inicial
for _, obj in ipairs(Workspace:GetDescendants()) do
    if obj.Name == targetName then 
        applyESP(obj) 
    end
end

print("ESP para Photo Camera (Verde) ativado.")