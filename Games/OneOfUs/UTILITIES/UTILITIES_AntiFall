-- Script: Attribute Master (Bypass)
local localPlayer = game:GetService("Players").LocalPlayer
local character = localPlayer.Character or localPlayer.CharacterAdded:Wait()

-- Tabela de travas (Ative o que quiser com true/false ou valores)
local flags = {
    -- Survivor
    ["IS_PRONE"] = false,
}

local function applyBypass()
    for attr, value in pairs(flags) do
        -- Força o valor inicial
        localPlayer:SetAttribute(attr, value)
        character:SetAttribute(attr, value)
        
        -- Trava o valor para não mudar
        localPlayer:GetAttributeChangedSignal(attr):Connect(function()
            localPlayer:SetAttribute(attr, value)
        end)
        character:GetAttributeChangedSignal(attr):Connect(function()
            character:SetAttribute(attr, value)
        end)
    end
end

applyBypass()
localPlayer.CharacterAdded:Connect(function(newChar)
    character = newChar
    task.wait(1)
    applyBypass()
end)

print("Atributos mestre aplicados com sucesso!")
