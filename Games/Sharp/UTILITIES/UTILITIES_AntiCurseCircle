local TargetItem = "CurseCircle"
local TargetPart = "HitDetect"
local ToggleKey = "Vortex_Curse_Control"

if _G[ToggleKey] then
    _G[ToggleKey] = nil
    if _G.CurseConnections then
        for _, conn in pairs(_G.CurseConnections) do
            if conn then conn:Disconnect() end
        end
        _G.CurseConnections = nil
    end
    warn("ANTI-CURSE: >>> DESATIVADO <<<")
    return 
end

_G[ToggleKey] = true
_G.CurseConnections = {}
local currentID = tick()
_G.CurseCurrentID = currentID
warn("ANTI-CURSE: >>> ATIVADO <<<")

local function removeTouch(obj)
    if obj.Name == TargetItem then
        local hit = obj:FindFirstChild(TargetPart)
        if hit then
            for _, child in pairs(hit:GetChildren()) do
                if child:IsA("TouchTransmitter") or child.Name == "TouchInterest" then
                    child:Destroy()
                end
            end
        end
    end
end

local function getFolders()
    local f = {}
    for _, c in pairs(workspace:GetChildren()) do
        if c.Name == "Entities" and c:IsA("Folder") then table.insert(f, c) end
    end
    return f
end

for _, folder in pairs(getFolders()) do
    for _, child in pairs(folder:GetChildren()) do
        removeTouch(child)
    end
    local conn = folder.ChildAdded:Connect(function(child)
        if _G[ToggleKey] == true and _G.CurseCurrentID == currentID then
            task.wait(0.1)
            removeTouch(child)
        end
    end)
    table.insert(_G.CurseConnections, conn)
end

task.spawn(function()
    while _G[ToggleKey] == true and _G.CurseCurrentID == currentID do
        for _, folder in pairs(getFolders()) do
            for _, child in pairs(folder:GetChildren()) do
                removeTouch(child)
            end
        end
        task.wait(1)
    end
end)