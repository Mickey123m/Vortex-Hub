local NameColor = Color3.fromRGB(0, 170, 255)
local TextSize = 14
local TargetItem = "TeleportStone"

if _G.TeleportStoneESPActiveID then
    _G.TeleportStoneESPActiveID = nil
    task.wait(0.1)
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj.Name == "TeleportStoneExternalName" then
            obj:Destroy()
        end
    end
    warn("TELEPORT STONE ESP: DESATIVADO")
    return
end

local currentID = tick()
_G.TeleportStoneESPActiveID = currentID
warn("TELEPORT STONE ESP: ATIVADO")

local function applyTeleportESP(obj)
    if obj.Name == TargetItem then
        local adornee = obj:FindFirstChild("Main") or obj:FindFirstChildWhichIsA("BasePart") or obj
        
        if adornee then
            local oldName = adornee:FindFirstChild("TeleportStoneExternalName")
            if oldName then oldName:Destroy() end

            local billboard = Instance.new("BillboardGui")
            billboard.Name = "TeleportStoneExternalName"
            billboard.Adornee = adornee
            billboard.Size = UDim2.new(0, 150, 0, 40)
            billboard.StudsOffset = Vector3.new(0, 4, 0)
            billboard.AlwaysOnTop = true
            billboard.Parent = adornee

            local label = Instance.new("TextLabel")
            label.Parent = billboard
            label.BackgroundTransparency = 1
            label.Size = UDim2.new(1, 0, 1, 0)
            label.Text = "Teleport Stone"
            label.TextColor3 = NameColor
            label.TextStrokeTransparency = 0
            label.Font = Enum.Font.GothamBold
            label.TextSize = TextSize
        end
    end
end

local function getEntitiesFolders()
    local folders = {}
    for _, child in pairs(workspace:GetChildren()) do
        if child.Name == "Entities" and child:IsA("Folder") then
            table.insert(folders, child)
        end
    end
    return folders
end

for _, folder in pairs(getEntitiesFolders()) do
    for _, child in pairs(folder:GetChildren()) do
        applyTeleportESP(child)
    end
    
    folder.ChildAdded:Connect(function(child)
        if _G.TeleportStoneESPActiveID == currentID then
            task.wait(0.3)
            applyTeleportESP(child)
        end
    end)
end

task.spawn(function()
    while _G.TeleportStoneESPActiveID == currentID do
        for _, folder in pairs(getEntitiesFolders()) do
            for _, child in pairs(folder:GetChildren()) do
                if child.Name == TargetItem then
                    local adornee = child:FindFirstChild("Main") or child:FindFirstChildWhichIsA("BasePart")
                    if adornee and not adornee:FindFirstChild("TeleportStoneExternalName") then
                        applyTeleportESP(child)
                    end
                end
            end
        end
        task.wait(1.5)
    end
end)