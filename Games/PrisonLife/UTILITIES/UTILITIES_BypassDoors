-- ServerScriptService
task.spawn(function()
    while true do
        pcall(function()  -- Previne erros
            local pasta = workspace.Doors
            if pasta then
                for _, coisa in pairs(pasta:GetDescendants()) do
                    if coisa:IsA("BasePart") then
                        coisa.CanCollide = false
                        if coisa.Transparency < 0.7 then
                            coisa.Transparency = 0.7
                        end
                    end
                end
            end
        end)
        task.wait(0.08)  -- Rápido
    end
end)

print("✅ Bypass rodando em background")