local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local function GetAK47()
    -- AJUSTE A POSIÇÃO AQUI: (Esquerda/Direita, Cima/Baixo, Frente/Trás)
    local offset = Vector3.new(0, -2, 0) 
    
    local char = LocalPlayer.Character
    local humanoidRootPart = char and char:FindFirstChild("HumanoidRootPart")
    local humanoid = char and char:FindFirstChildOfClass("Humanoid")
    
    if not humanoidRootPart or not humanoid then return "Error: Character not found" end
    
    local prisonItems = workspace:FindFirstChild("Prison_ITEMS")
    local giverFolder = prisonItems and prisonItems:FindFirstChild("giver")
    local ak47 = giverFolder and (giverFolder:FindFirstChild("AK-47") or giverFolder:FindFirstChild("AK47"))
    
    if not ak47 then
        for _, item in pairs(giverFolder:GetChildren()) do
            if string.find(item.Name:lower(), "ak") then ak47 = item break end
        end
    end
    
    if not ak47 then return "Error: AK-47 not found" end
    
    local originalPosition = humanoidRootPart.CFrame
    humanoid:SetStateEnabled(Enum.HumanoidStateType.FallingDown, false)
    
    -- Teleporte: Posição da arma + o seu ajuste manual
    char:PivotTo(ak47:GetPivot() * CFrame.new(offset))
    
    task.spawn(function()
        for i = 1, 10 do
            if workspace:FindFirstChild("Remote") and workspace.Remote:FindFirstChild("ItemHandler") then
                workspace.Remote.ItemHandler:InvokeServer(ak47)
            end
            task.wait(0.05)
        end
    end)

    task.wait(0.6)
    humanoidRootPart.Velocity = Vector3.new(0, 0, 0)
    char:PivotTo(originalPosition)
    humanoid:SetStateEnabled(Enum.HumanoidStateType.FallingDown, true)
    
    return "Done"
end

return GetAK47()